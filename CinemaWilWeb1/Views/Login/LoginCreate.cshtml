@using Domain.Models.JWT;
@model Auth;
@{
    ViewData["Title"] = "Home Page";
}

<h3>Login Form</h3>
<hr />

<div class="row">

    <div class="col-md-4">

        <form asp-action="LoginCreate" asp-controller="Login">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">User Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group"
            <label asp-for="PassCode" class="control-label">PassCode</label>
            <input asp-for="PassCode" class="form-control"/>
            <span asp-validation-for="PassCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>

            <label>@Html.Raw(@ViewBag.Message)</label>

        </form>

    </div>

</div>
